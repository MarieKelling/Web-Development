<Window x:Class="BISEC.View.ReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:winform="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        WindowState="Maximized" WindowStartupLocation="CenterScreen"       
        ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        <!--<Button Content="Export to Excel" Width="auto"
                Click="Button_Click">
            
        </Button>-->
        
        <WindowsFormsHost Grid.Row="1">
            <winform:ReportViewer x:Name="reportViewer" Load="ReportView_Load"/>
        </WindowsFormsHost>
    </Grid>
</Window>


    