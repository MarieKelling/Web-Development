<Window x:Class="BISEC.View.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard"
        xmlns:views="clr-namespace:BISEC.View"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>
        
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal"  Background="Blue">
                        <Image Source="/Resource/Img/clock.png" Height="25"/>
                        <Label Content="TIMESHEET" Foreground="White" FontWeight="ExtraBold" Padding="5"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer>
                    <views:AdminTimesheetView></views:AdminTimesheetView>
                </ScrollViewer>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal"  Background="Blue">
                        <Image Source="/Resource/Img/reg-user.png" Height="25"/>
                        <Label Content="EMPLOYEE MANAGEMENT" Foreground="White" FontWeight="ExtraBold" Padding="5"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
